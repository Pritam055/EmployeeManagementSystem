@model IncomeTaxViewModel

@{
    ViewData["Title"] = "EditIncomeTax";
}

<h1 class="text-center">Edit Income Tax</h1>

<hr />


<div class="container">
    <div class="row ">

        <div class="col-5 mx-auto">

            <form asp-action="EditIncomeTax">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Id" type="hidden" />
               

                <div class="form-group" contenteditable="false">
                    <label asp-for="TaxableAmount" class="control-label"></label>
                    <input asp-for="TaxableAmount" class="form-control" placeholder="Rs." readonly/>
                   @* <span asp-validation-for="TaxableAmount" class="text-danger"></span>*@
                </div>
                <div class="form-group">
                    <label asp-for="Rate" class="control-label"></label>
                    <input asp-for="Rate" class="form-control" placeholder="%" />
                    <span asp-validation-for="Rate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-success" />
                    <a asp-action="GetTaxTable" asp-controller="Tax" class="ml-2 btn btn-primary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
