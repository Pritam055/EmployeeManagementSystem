@model ApplicationUser

@{
    ViewData["Title"] = "GetEmployeeById"; 
    var imagePath = "~/images/" + (Model.Photo ?? "default.png");
}

<h1>Employee Data</h1>

<div class="container">
    <div class="row mx-auto"> 
        <div class="col-lg-4">
            <img src="@imagePath" asp-append-version="true" style="height:300px; width:300px;" />
        </div>
        
        <div class="col-lg-4">


            <div class="card">
                <div class="card-header">
                    Role Id: @Model.Id
                </div>
                <div class="card-body"  style="background-color:#f5f5f5;">
                    <h5 class="card-title">  Name:  @Model.EmployeeName  </h5>
                    <h5 class="card-title">  Email:  @Model.UserName</h5>
                    <h5 class="card-title">  Address:  @Model.Address  </h5>
                    <h5 class="card-title">  Total Salary:  Rs.@Model.TotalSalary  </h5>
                    <h5 class="card-title">  PF (Provident  Fund): Rs.@Model.PF  </h5>  
                </div>
                

            </div>
        </div>

       </div>
    </div>
<div class="mt-2"> 
    <a asp-action="EditEmployee" asp-controller="Employee" asp-route-empId="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="ListEmployee" asp-controller="Employee" class="btn btn-primary ml-2">Back to List</a>
</div>
