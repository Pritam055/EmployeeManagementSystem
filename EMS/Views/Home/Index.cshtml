@{
    ViewData["Title"] = "Home Page";
    var imagePath1 = "~/images/employee_salaries1.jpg";
    var imagePath2 = "~/images/employee_salaries2.jpg";
    var imagePath3 = "~/images/employee_salaries3.jpg";
}
<style>
    .carousel-inner img {
        width: 100%;
        height: 100%;
    }

    #logo {
    }

    body {
        background-color: #ebeff5;
    }


    #total-orders {
        background-color: #4cb4c7;
    }


    #orders-delivered {
        background-color: #7abecc;
    }

    #orders-pending {
        background-color: #7CD1C0;
    }

</style>

<div class="container-fluid">
    <div class="row">

        <div id="carouselExampleControls" class="carousel slide m-0" data-ride="carousel">

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="d-block w-100" src="@imagePath1" alt="First slide" asp-append-version="true">
                    <div class="carousel-caption">
                        <h3>Thank you</h3>
                        <p>We had such a great time in the office</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@imagePath2" alt="Second slide" asp-append-version="true">
                </div>
                <div class="carousel-item">
                    <img class="d-block w-100" src="@imagePath3" alt="Third slide" asp-append-version="true">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

